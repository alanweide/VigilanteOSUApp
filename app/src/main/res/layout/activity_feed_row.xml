<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/vigGray">
        <ImageView
            android:id="@+id/severity_icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="4dp"
            android:layout_alignParentLeft="true">
        </ImageView>
        <TextView
            android:id="@+id/report_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@+id/report_title"
            android:textSize="@dimen/large_text"
            android:textStyle="bold"
            android:ellipsize="end"
            android:textAllCaps="true"
            android:maxLines="1"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:layout_alignTop="@+id/severity_icon"
            android:layout_toRightOf="@+id/severity_icon">
        </TextView>
        <TextView
            android:id="@+id/report_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@+id/report_time"
            android:textSize="@dimen/small_text"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/severity_icon">
        </TextView>

        <TextView
            android:id="@+id/report_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@+id/report_location"
            android:textSize="@dimen/med_text"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/severity_icon">
        </TextView>
</RelativeLayout>